{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "react-app",
        "react-app/jest",
        "prettier",
        "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
        "dist"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "tsx": true
        },
        "sourceType": "module",
        "experimentalObjectRestSpread": true
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "react-hooks",
        "import"
    ],
    "rules": {
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
