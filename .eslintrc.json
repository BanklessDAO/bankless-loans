{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "prettier",
        "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
        "dist"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "tsx": true
        },
        "sourceType": "module",
        "experimentalObjectRestSpread": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
