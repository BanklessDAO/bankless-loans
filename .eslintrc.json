{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2017,
        "ecmaFeatures": {
            "tsx": true,
            "jsx": true
        },
        "sourceType": "module",
        "experimentalObjectRestSpread": true
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "next",
        "prettier"
    ],
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "react/prop-types": "off",
        "react/jsx-key": [1, { "checkFragmentShorthand": true }]
    },
    "ignorePatterns": [
        "dist"
    ]
}
